            <div>
        <% else %>
          <div class="text-center">
                <img src="<%= user.user_photo %>"width="60" height="60" class="rounded-circle mb-2 mx-4" >
                <h5 class="user_name pl-2"><%= user.user_name %></h5>
                <%= button_to "follow", follow_user_path(user.id), method: :post, :class => 'btn btn-outline-light mx-4'%>
                <br>
            <div>
      <% end %>
    <% end %> 
  <%end%>

